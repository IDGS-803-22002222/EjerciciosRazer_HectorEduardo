@page
@model EjerciciosRazer_HectorEduardo.Pages.codificadorMensajeModel
@{
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Codificador</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="MensajeOriginal" class="form-label">Mensaje</label>
                            <input asp-for="MensajeOriginal" class="form-control" placeholder="Introduce el mensaje aquí" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="N" class="form-label">Desplazamiento (n)</label>
                            <input asp-for="N" type="number" min="1" max="25" class="form-control" />
                        </div>
                        <div class="d-flex gap-2">
                            <button type="submit" asp-page-handler="Codificar" class="btn btn-success">Codificar</button>
                            <button type="submit" asp-page-handler="Decodificar" class="btn btn-secondary">Decodificar</button>
                        </div>
                    </form>
                </div>
                @if (Model.MensajeCodificado != null)
                {
                    <div class="alert alert-success m-3">
                        <strong>Mensaje codificado:</strong> @Model.MensajeCodificado
                    </div>
                }
                @if (Model.MensajeDecodificado != null)
                {
                    <div class="alert alert-info m-3">
                        <strong>Mensaje decodificado:</strong> @Model.MensajeDecodificado
                    </div>
                }
            </div>
        </div>
    </div>
</div>